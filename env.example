# MongoDB connection string
# Для MongoDB Atlas используйте:
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ios-atr?retryWrites=true&w=majority

# Для локального Docker используйте:
# MONGODB_URI=mongodb://localhost:27017/ios-atr

# Для Docker Compose с локальным MongoDB используйте:
# MONGODB_URI=mongodb://mongodb:27017/ios-atr

# Server port (внутри контейнера, nginx проксирует на этот порт)
PORT=3000

# Node environment
NODE_ENV=production

